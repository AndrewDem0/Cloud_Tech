@model WebApplication_lab.Models.ImmersiveReaderModel

@{
    ViewData["Title"] = "Immersive Reader C# Quickstart";
}

@section Styles {
    <style type="text/css">
        .immersive-reader-button {
            background-color: white;
            margin-top: 5px;
            border: 1px solid black;
            float: right;
        }

        .upload-container {
            margin-top: 20px;
        }
    </style>
}

<div class="container">
    <!-- Форма для завантаження PDF -->
    <div class="upload-container">
        <h2>Upload a PDF file for Immersive Reader</h2>
        <form id="pdf-upload-form" enctype="multipart/form-data" method="post" asp-action="UploadPdf">
            <div>
                <label for="file">Choose PDF File:</label>
                <input type="file" id="file" name="file" accept="application/pdf" required />
            </div>
            <div>
                <button type="submit">Upload PDF</button>
            </div>
        </form>
    </div>

    <!-- Кнопка для Immersive Reader -->
    <button class="immersive-reader-button" data-button-style="iconAndText" data-locale="en"></button>

    <h1 id="ir-title">About Immersive Reader</h1>
    <div id="ir-content" lang="en-us">
        <p>
            Immersive Reader is a tool that implements proven techniques to improve reading comprehension for emerging readers, language learners, and people with learning differences.
            The Immersive Reader is designed to make reading more accessible for everyone. The Immersive Reader:
            <ul>
                <li>Shows content in a minimal reading view</li>
                <li>Displays pictures of commonly used words</li>
                <li>Highlights nouns, verbs, adjectives, and adverbs</li>
                <li>Reads your content out loud to you</li>
                <li>Translates your content into another language</li>
                <li>Breaks down words into syllables</li>
            </ul>
        </p>
        <h3>The Immersive Reader is available in many languages.</h3>
        <p lang="es-es">
            El Lector inmersivo está disponible en varios idiomas.
        </p>
        <p lang="zh-cn">
            沉浸式阅读器支持许多语言
        </p>
        <p lang="de-de">
            Der plastische Reader ist in vielen Sprachen verfügbar.
        </p>
        <p lang="ar-eg" dir="rtl" style="text-align:right">
            يتوفر "القارئ الشامل" في العديد من اللغات.
        </p>
    </div>
</div>

@section Scripts {
    <script src="https://ircdname.azureedge.net/immersivereadersdk/immersive-reader-sdk.1.4.0.js"></script>
    <script>
        // Функція для отримання токену та субдомену
        function getTokenAndSubdomainAsync() {
            return new Promise(function (resolve, reject) {
                $.ajax({
                    url: "@Url.Action("GetTokenAndSubdomain", "ImmersiveReader")", // Викликаємо ваш контролер
                    type: "GET",
                    success: function (data) {
                        if (data.error) {
                            reject(data.error);
                        } else {
                            resolve(data);
                        }
                    },
                    error: function (err) {
                        reject(err);
                    }
                });
            });
        }

        // Обробник натискання на кнопку Immersive Reader
        $(".immersive-reader-button").click(function () {
            handleLaunchImmersiveReader();
        });

        // Запуск Immersive Reader
        function handleLaunchImmersiveReader() {
            getTokenAndSubdomainAsync()
                .then(function (response) {
                    const token = response["token"];
                    const subdomain = response["subdomain"];

                    // Підготовка даних для Immersive Reader
                    const data = {
                        title: $("#ir-title").text(),
                        chunks: [{
                            content: $("#ir-content").html(),
                            mimeType: "text/html"
                        }]
                    };

                    // Опції для Immersive Reader
                    const options = {
                        onExit: exitCallback, // Колбек після виходу з Immersive Reader
                        uiZIndex: 2000 // Задаємо рівень по Z для UI
                    };

                    // Запуск Immersive Reader
                    ImmersiveReader.launchAsync(token, subdomain, data, options)
                        .catch(function (error) {
                            alert("Error in launching the Immersive Reader. Check the console.");
                            console.log(error);
                        });
                })
                .catch(function (error) {
                    alert("Error in getting the Immersive Reader token and subdomain. Check the console.");
                    console.log(error);
                });
        }

        // Колбек, який виконується після закриття Immersive Reader
        function exitCallback() {
            console.log("Immersive Reader закрився.");
        }

        // Обробка форми завантаження PDF
        $("#pdf-upload-form").submit(function (event) {
            event.preventDefault();  // Не даємо відправити форму звичайним способом

            var formData = new FormData(this);  // Створюємо об'єкт FormData для завантаження файлу

            $.ajax({
                url: '@Url.Action("UploadPdf", "ImmersiveReader")',  // Ваш URL для обробки файлу
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.token && data.subdomain && data.content) {
                        // Якщо дані надійшли успішно, передаємо їх у Immersive Reader
                        const token = data.token;
                        const subdomain = data.subdomain;
                        const content = data.content;

                        const readerData = {
                            title: data.title,
                            chunks: [{
                                content: content,
                                mimeType: "text/html"
                            }]
                        };

                        const options = {
                            onExit: exitCallback,
                            uiZIndex: 2000
                        };

                        ImmersiveReader.launchAsync(token, subdomain, readerData, options)
                            .catch(function (error) {
                                alert("Error in launching the Immersive Reader. Check the console.");
                                console.log(error);
                            });
                    } else {
                        alert('Error: Unable to get data from the server.');
                    }
                },
                error: function (error) {
                    alert('Error: Unable to upload file.');
                    console.log(error);
                }
            });
        });
    </script>
}
