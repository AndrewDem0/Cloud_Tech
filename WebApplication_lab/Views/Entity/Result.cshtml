@model List<WebApplication_lab.Models.EntityLinkingResult>

<h2>Результати Entity Linking</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Посилання</th>
                <th>Джерело</th>
                <th>Збіги</th>
                <th>Точність</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td><a href="@item.Url" target="_blank">@item.Url</a></td>
                    <td>@item.DataSource</td>
                    <td>@item.MatchedText</td>
                    <td>@item.ConfidenceScore%</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Кнопка для завантаження -->
    <form method="post" asp-action="DownloadResults">
        @for (int i = 0; i < Model.Count; i++)
        {
            <input type="hidden" name="model[@i].Name" value="@Model[i].Name" />
            <input type="hidden" name="model[@i].Url" value="@Model[i].Url" />
            <input type="hidden" name="model[@i].DataSource" value="@Model[i].DataSource" />
            <input type="hidden" name="model[@i].MatchedText" value="@Model[i].MatchedText" />
            <input type="hidden" name="model[@i].ConfidenceScore" value="@Model[i].ConfidenceScore" />
        }
        <button type="submit" class="btn btn-primary">Завантажити результати</button>
    </form>

}
else
{
    <p>Не знайдено жодних сутностей для цього тексту.</p>
}
