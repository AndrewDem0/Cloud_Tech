@model WebApplication_lab.Models.PiiResultModel

<h3>Результати аналізу PII</h3>

<div class="mb-3">
    <h5>Замаскований текст:</h5>
    <p>@Model.RedactedText</p>
</div>

@if (Model.Entities?.Count > 0)
{
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Сутність</th>
                <th>Категорія</th>
                <th>Ймовірність</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entityStr in Model.Entities)
            {
                var parts = entityStr.Split('|');
                <tr>
                    <td>@parts[0]</td>
                    <td>@parts[1]</td>
                    <td>@parts[2]%</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>PII-сутностей не знайдено.</p>
}

<a asp-action="Index" class="btn btn-primary">Назад</a>