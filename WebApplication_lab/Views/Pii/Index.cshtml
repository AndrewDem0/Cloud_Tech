@{
    ViewData["Title"] = "Pii Entity Recognition";
}

<h2>Pii Entity Recognition</h2>

<form method="post">
    <div class="form-group">
        <label for="inputText">Введіть текст:</label>
        <textarea name="inputText" class="form-control" rows="6"></textarea>
    </div>

    <br />
    <button type="submit">Submit</button>
</form>

@if (Model != null)
{
    <h3>Redacted Text:</h3>
    <p>@Model.RedactedText</p>

    <h3>Entities:</h3>
    <ul>
        @foreach (var entity in Model.Entities)
        {
            <li>@entity</li>
        }
    </ul>
}
