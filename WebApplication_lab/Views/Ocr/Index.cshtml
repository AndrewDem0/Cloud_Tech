@model WebApplication_lab.Models.OcrResultModel

@{
    ViewData["Title"] = "OCR Service";
}

<h2>Azure OCR (Read API)</h2>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Select Image:</label>
        <input type="file" name="ImageFile" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Extract Text</button>
</form>

@if (!string.IsNullOrEmpty(Model.ExtractedText))
{
    <hr />
    <h4>Uploaded Image:</h4>
    <img src="@Model.ImageUrl" alt="Uploaded Image" style="max-width: 100%; height: auto;" />

    <h4 class="mt-4">Extracted Text:</h4>
    <textarea class="form-control" rows="6" readonly>@Model.ExtractedText</textarea>

    <div class="mt-3">
        <strong>Confidence:</strong> @Model.Confidence%
    </div>
}
