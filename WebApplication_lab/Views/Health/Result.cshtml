@model WebApplication_lab.Models.HealthResultModel
@{
    ViewData["Title"] = "Результати аналізу";
}

<h2>Результати медичного аналізу</h2>

@if (Model.Entities.Count > 0)
{
    <h3>Знайдені сутності:</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Сутність</th>
                <th>Категорія</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Entities.Count; i++)
            {
                <tr>
                    <td>@Model.Entities[i]</td>
                    <td>@Model.Categories[i]</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Медичних сутностей не знайдено.</p>
}

<a asp-action="Index" class="btn btn-secondary">Назад</a>