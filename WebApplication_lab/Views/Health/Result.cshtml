@model WebApplication_lab.Models.HealthResultModel

<h3>Результати медичного аналізу</h3>

@if (Model.Entities?.Count > 0)
{
    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Сутність</th>
                <th>Категорія</th>
                <th>Ймовірність</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Entities.Count; i++)
            {
                <tr>
                    <td>@Model.Entities[i]</td>
                    <td>@Model.Categories[i]</td>
                    <td>@Model.ConfidenceScores[i]%</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Медичних сутностей не знайдено.</p>
}

<a asp-action="Index" class="btn btn-primary">Назад</a>

<style>
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #212529;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .thead-light {
        background-color: #f8f9fa;
    }
</style>